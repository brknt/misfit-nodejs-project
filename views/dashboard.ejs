          <div class="row">
            <div class="card-group">
  
              <% for(let i=0;i<user.trainings.length;i++){ %>
                <div class="col-sm-6 col-md-4">
                  <div class="card">
                    <img src="/images/tra0.jpg" class="card-img-top" alt="Hollywood Sign on The Hill" href="/" />
                    <div class="card-body">
                      <h5 class="card-title"><a href="/trainings/<%= user.trainings[i].slug%>" title="">
                          <%= user.trainings[i].name%>
                        </a></h5>
                      <p class="card-text">
                        <%= user.trainings[i].description%>
                      </p>
  
                    </div>
                  
                  </div>
  
                </div>
  
                <% } %>
  
            </div>
          </div>
        </div>
      </div>
      <% } %>

    

    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div style="margin-top: 50px; margin-bottom: 50px;" class="container">
            <div class="row">
              <div class="col-md-12 ">
                <div class="text_align_center">
                  <h2 style="
                     font-size: 30px;
                     margin-bottom: 20px;
                     color: #022c53;
                 ">Add New Training</h2>
                </div>
              </div>
              <div class="col-md-12 offset-md-1">
                <form id="request" class="main_form" method="POST" action="/training">
                  <div class="row">
                    <div class="offset-1 col-lg-10 col-md-10 col-sm-10">
                      <input class="form_control" placeholder="Name" type="text" name="name">
                    </div>
                    <div class="offset-1 col-lg-10 col-md-10 col-sm-10">
                      <textarea name="description" style="height: 150px;" class="form_control" placeholder="Description"
                        rows="5"></textarea>
                    </div>



                    <div class="offset-1 col-lg-10 col-md-10 col-sm-10">
                      <div class="group_form">
                        <button class="read_more">SUBMIT</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
